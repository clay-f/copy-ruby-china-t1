<ul class="list-group">
    <li class="list-group-item clearfix">
        <div class="star-rating" data-score="<%= comment.raty %>"</div>
    </li>
    <%= comment.body %>
    <% if user_signed_in? %>
        <% if @article.user_id == current_user.id %>
            <div class="pull-right">
                <%= link_to edit_article_comment_path(@article, comment) do %>
                    <i class="glyphicon glyphicon-pencil"></i>
                <% end %>
            </div>
        <% end %>
    <% end %>
</ul>
<script type="text/javascript" charset="utf-8">
    $('#star-rating').raty({
        path: "/assets/",
        scoreName: "comment[raty]"
    });
</script>

