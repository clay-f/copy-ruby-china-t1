%ul.list-group
  %li.list-group-item.clearfix
    <div class="star-rating" data-score="#{comment.raty}"></div>
    = comment.body
    - if user_signed_in?
      - if @article.user_id == current_user.id
        .pull-right
          = link_to edit_article_comment_path(@article, comment) do
            %i.glyphicon.glyphicon-pencil


:javascript
  $('.star-rating').raty({
    path: '/assets/',
    readOnly: true,
    score: function() {
        return $(this).attr('data-score')
    }
  });
